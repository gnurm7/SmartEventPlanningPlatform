@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <!-- Kayıt Ol ve Giriş Yap bağlantıları -->
    <p>
        Henüz hesabınız yok mu? <a asp-controller="Kullanici" asp-action="KayitOl">Kayıt Ol</a>
    </p>
    <p>
        Zaten hesabınız var mı? <a asp-controller="Kullanici" asp-action="GirisYap">Giriş Yap</a>
    </p>
</div>

<!-- Harita için alan -->
<div id="map" style="height: 500px; width: 100%;"></div>

@section Scripts {
    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBFXDO-G5xsoSOXpV0F-MLfOZ6_qBXHCFw&callback=initMap" async defer></script>

    <script>
        // Haritayı başlatma
        function initMap() {
            // İstanbul koordinatları (varsayılan başlangıç)
            const map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 41.0082, lng: 28.9784 },
                zoom: 10,
            });

            // Haritaya tıklayınca marker ekleme
            map.addListener("click", (e) => {
                new google.maps.Marker({
                    position: e.latLng,
                    map: map,
                });
            });
        }
    </script>
}
